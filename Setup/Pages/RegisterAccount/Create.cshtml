            </div>
            <div class="form-group">
                <label asp-for="Account.FirstName" class="control-label"></label>
                <input asp-for="Account.FirstName" class="form-control" />
                <span asp-validation-for="Account.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.LastName" class="control-label"></label>
                <input asp-for="Account.LastName" class="form-control" />
                <span asp-validation-for="Account.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.CompanyName" class="control-label"></label>
                <input asp-for="Account.CompanyName" class="form-control" />
                <span asp-validation-for="Account.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Email" class="control-label"></label>
                <input asp-for="Account.Email" class="form-control" />
                <span asp-validation-for="Account.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Telephone" class="control-label"></label>
                <input asp-for="Account.Telephone" class="form-control" />
                <span asp-validation-for="Account.Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Street" class="control-label"></label>
                <input asp-for="Account.Street" class="form-control" />
                <span asp-validation-for="Account.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.City" class="control-label"></label>
                <input asp-for="Account.City" class="form-control" />
                <span asp-validation-for="Account.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.Province" class="control-label"></label>
                <input asp-for="Account.Province" class="form-control" />
                <span asp-validation-for="Account.Province" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.ZipCode" class="control-label"></label>
                <input asp-for="Account.ZipCode" class="form-control" />
                <span asp-validation-for="Account.ZipCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.UserName" class="control-label"></label>
                <input asp-for="Account.UserName" class="form-control" />
                <span asp-validation-for="Account.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

