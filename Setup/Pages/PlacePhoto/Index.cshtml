@page 
@model Setup.Pages.PlacePhoto.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Photo[0].PhotoName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Photo) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PhotoID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PhotoID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PhotoID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
