@page
@model Setup.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>
</br>

<div class="row">
    <div class="col-md-12 mb-5">
        <h2>Enter Your Information</h2>
        <hr>
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="form-row">
                    <label for="username" class="col-sm-1 col-form-label">Username:</label>
                    <div class="form-group col-sm-5">
                        <input type="username" class="form-control" id="username">
                    </div>
                </div>
                <div class="form-row">
                    <label for="pass" class="col-sm-1 col-form-label">Password:</label>
                    <div class="form-group col-sm-5">
                        <input type="password" class="form-control" id="pass">
                    </div>
                </div>
                <div class="form-row">
                    <label>
                        <input type="checkbox" checked="checked" name="remember"> Remember me
                    </label>
                </div>
                <div class="btn-group" role="group">
                    <button class="btn btn-outline-primary btn-lg" onclick="window.location.href='UserAccount/Details';">Sign In</button>
                    <button class="btn btn-outline-primary btn-lg" onclick="window.location.href='UserAccount/Details';">Register</button>
                    <button class="btn btn-outline-primary btn-lg" onclick="window.location.href='UserAccount/Details';">I Forgot my password</button>
                </div>

            </div>
        </div>
    </div>
</div>