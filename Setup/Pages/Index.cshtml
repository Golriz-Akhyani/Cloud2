@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<header class="bg-primary py-5 mb-5">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-lg-12">
                <h1 class="display-4 text-white mt-5 mb-2">Set-Up</h1>
                <p class="lead mb-5 text-white-50">Find your perfect workplace!</p>
            </div>
        </div>
    </div>
</header>

<div class="row">
    <div class="col-md-8 mb-5">
        <h2>Begin Search</h2>
        <hr>
        <div class="row justify-content-md-center">
            <div class="col-lg-11 col-md-11 col-sm-11">
                <div class="form-row">
                    <label for="occupants" class="col-sm-3 col-form-label">Occupants</label>
                    <div class="form-group col-sm-9">
                        <input type="number" class="form-control" placeholder="0" min="0" id="occupants">
                    </div>
                </div>
                <div class="form-row">
                    <label for="strtdate" class="col-sm-3 col-form-label">Start Date</label>
                    <div class="form-group col-sm-3">
                        <input type="date" class="form-control" id="strtdate">
                    </div>
                    <label for="enddate" class="col-sm-3 col-form-label">End Date</label>
                    <div class="form-group col-sm-3">
                        <input type="date" class="form-control" id="enddate">
                    </div>
                </div>
                <br>
                <center><input type="submit" class="btn btn-primary btn-lg" value="Search" name="" onclick="window.location.href='SearchPlace';"></center>
                <br>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-5">
        <h2>I want to host!</h2>
        <hr>
        <br>
        <br>
        <center><input type="submit" class="btn btn-primary btn-lg" value="Let's Get Started!" name="" onclick="window.location.href='Login';"></center>
    </div>
</div>

