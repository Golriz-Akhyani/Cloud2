@page
@model Setup.Pages.PlaceList.CreateModel

@{
    ViewData["Title"] = "CreatePlace";
    ViewData["Description"] = "Create a Place";
}

<h1>Create</h1>

<h4>Place</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Place.PlaceName" class="control-label"></label>
                <input asp-for="Place.PlaceName" class="form-control" />
                <span asp-validation-for="Place.PlaceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place.License " class="control-label"></label>
                <input asp-for="Place.License " class="form-control" />
                <span asp-validation-for="Place.License " class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Place.Address" class="control-label"></label>
                <input asp-for="Place.Address" class="form-control" />
                <span asp-validation-for="Place.Address" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.Wifi" /> @Html.DisplayNameFor(model => model.Place.Wifi))
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.Whiteboard" /> @Html.DisplayNameFor(model => model.Place.Whiteboard))
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.ParkingLot" /> @Html.DisplayNameFor(model => model.Place.ParkingLot))
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Place.Washroom" /> @Html.DisplayNameFor(model => model.Place.Washroom))
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Place.Description" class="control-label"></label>
                <input asp-for="Place.Description" class="form-control" />
                <span asp-validation-for="Place.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
